<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android">
  
    <EditTextPreference
        android:key="@string/username_key"
	 	android:title="Username"
		android:summary="Modify your username" />
            
    <EditTextPreference
        android:key="@string/password_key"
	 	android:title="Password"
	 	android:password="true"
		android:summary="Modify your password (Note: This will not modify your account password)"/>
		
    <CheckBoxPreference
        android:key="@string/wifi_only_key"
        android:title="Only Stream on wifi" />
  
</PreferenceScreen>
