<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.cetus.pithos"
      android:versionCode="1" android:versionName=".01">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-sdk android:minSdkVersion="5" />

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Preferences" android:label="@string/app_name"></activity>
        <activity android:name=".Stations" android:label="@string/app_name" android:configChanges="orientation|keyboardHidden"></activity>
        <activity android:name=".Signin" android:label="@string/app_name"></activity>
        <activity android:name=".About" android:label="@string/app_name"></activity>

    </application>
</manifest>